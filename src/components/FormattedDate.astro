---
interface Props {
	date: Date;
}

const { date } = Astro.props;

//Translation tools:
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);

---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(lang, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
