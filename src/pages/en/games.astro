---
import { SEO } from "astro-seo";
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

//Locale
import { getLangFromUrl } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);

const posts = (await getCollection('blog')).filter(a => a.slug.substring(0,2) === lang).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<SEO
			title="Makina games"
			description="Games developed with love by PLAY MAKINA. Includes a motivational quote at the end of the post."
			openGraph={{
				basic: {
				title: "Play Makina",
				type: "A type.",
				image: "https://www.playmakina.com/logo-PM.jpg",
				}
			}}
			twitter={{
				creator: "@playmakina"
			}}
			extend={{
				// extending the default link tags
				link: [{ rel: "icon", href: "/favicon.png" }],
				// extending the default meta tags
				meta: [
				{
					name: "twitter:image",
					content: "https://www.playmakina.com/logo-PM.jpg",
				},
				{ name: "twitter:title", content: "playmakina" },
				{ name: "twitter:description", content: "Indie video games" },
				],
			}}
		/>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
				font-family: 'pixelEmulator';
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				opacity: 0.4;
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			/* Container holding the image and the text */
			.container {
				position: relative;
  				text-align: center;
			}
			/* Centered text */
			.centered {
				width: 90%;
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.filter(post => post.data.section === 'game').map((post) => (
							<li>
								<a href={`/${post.slug}/`} class="container local-link">
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<div class="centered">
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
