---
import { SEO } from "astro-seo";
---

<head>
	<SEO
		title="Play Makina"
		description="Your favourite video game developer :D Games, podcast, Music & Artwork.."
		openGraph={{
			basic: {
			title: "Play Makina",
			type: "A type.",
			image: "https://www.playmakina.com/logo-PM.jpg",
			}
		}}
		twitter={{
			creator: "@playmakina"
		}}
		extend={{
			// extending the default link tags
			link: [{ rel: "icon", href: "/favicon.png" }],
			// extending the default meta tags
			meta: [
			{
				name: "twitter:image",
				content: "https://www.playmakina.com/logo-PM.jpg",
			},
			{ name: "twitter:title", content: "playmakina" },
			{ name: "twitter:description", content: "Indie video game developer" },
			],
		}}
	/>
</head>


<meta http-equiv="refresh" content="0;url=/en/makimakulo/" />